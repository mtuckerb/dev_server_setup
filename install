sudo apt remove --assume-yes vim-tiny
sudo add-apt-repository -y  ppa:jonathonf/vim
sudo apt-get update -y

curl -LO https://github.com/BurntSushi/ripgrep/releases/download/11.0.1/ripgrep_11.0.1_amd64.deb
sudo dpkg -i ripgrep_11.0.1_amd64.deb

#Setup languageservers for those of us that use semantic completions

sudo apt-get install -y npm git-lfs exuberant-ctags libcurl4-gnutls-dev
sudo npm install -g vscode-html-languageserver-bin
sudo npm install -g vscode-css-languageserver-bin
sudo npm install -g vscode-json-languageserver-bin
sudo npm install -g flow-bin
#flow lsp to rc
gem install m solargraph --no-document
#"solargraph stdio to rc


curl --remote-name https://prerelease.keybase.io/keybase_amd64.deb
sudo apt-get -y install ./keybase_amd64.deb

sudo add-apt-repository -y ppa:martin-frost/thoughtbot-rcm
sudo apt-get -y install autossh rcm zsh libidn11-dev libldap2-dev graphviz

rvm install "ruby-2.5.0"
cd ~

git clone git@github.com:mtuckerb/dotfiles.git .dotfiles
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)" --unattended --nochsh
yes | rcup -d ~/.dotfiles
git clone https://github.com/romkatv/powerlevel10k.git ~/.oh-my-zsh/custom/themes/powerlevel10k
sudo chsh -s /usr/bin/zsh ubuntu
cp -r bin ~
