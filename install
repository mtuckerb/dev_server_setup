sudo cat > /etc/apache2/sites-available/ghdb.conf
<VirtualHost *:80>
  ServerName tucker.ghdb.intellum.com
  ServerAlias ghdb.intellum-dev.ngrok.io
  DocumentRoot /home/rbadmin/intellum/github_dashboard/public
  RailsEnv development
  RackEnv development
  PassengerDefaultRuby /home/rbadmin/.rbenv/shims/ruby

  <Directory /home/rbadmin/intellum/github_dashboard/public>
      Options +FollowSymLinks -MultiViews
      Require all granted
      AllowOverride All
      Order deny,allow
      Allow from all
  </Directory>

</VirtualHost>

sudo cat > /etc/apache2/sites-available/level.conf
<VirtualHost *:80>
  ServerName tucker.intellumlevel-staging.com
  ServerAlias *.tucker.intellumlevel-staging.com
  DocumentRoot /home/rbadmin/intellum/level/public
  RailsEnv development
  RackEnv development
  PassengerDefaultRuby /home/rbadmin/.rbenv/shims/ruby

  <Directory /home/rbadmin/intellum/level/public>
      Options +FollowSymLinks -MultiViews
      Require all granted
      AllowOverride All
      Order deny,allow
      Allow from all
  </Directory>

</VirtualHost>

